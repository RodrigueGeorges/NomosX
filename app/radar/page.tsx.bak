            </Button>
            <Button
              variant="ghost"
              size="sm"
              onClick={loadCards}
              disabled={loading}
            >
              <RefreshCw size={16} strokeWidth={2} className={loading ? "animate-spin" : ""} />
            </Button>
          </div>
        </div>

      {/* Error state */}
      {error && (
        <Card variant="error" className="mb-6">
          <CardContent className="py-6">
            <div className="flex items-center gap-3 text-danger">
              <AlertCircle size={20} strokeWidth={1.5} />
              <p>Erreur lors du chargement des signaux : {error}</p>
            </div>
          </CardContent>
        </Card>
      )}

      {/* Loading skeletons */}
      {loading && (
        <div className="grid md:grid-cols-2 gap-6">

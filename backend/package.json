{
  "name": "nomosx-backend",
  "version": "2.0.0",
  "description": "NomosX Production Backend - Evidence-first AI Platform",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "build": "tsc",
    "start": "node dist/api/server.js",
    "worker": "node dist/infrastructure/queue/worker.js",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "prisma:generate": "prisma generate --schema=prisma/schema-upgraded.prisma",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema-upgraded.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=prisma/schema-upgraded.prisma",
    "prisma:studio": "prisma studio --schema=prisma/schema-upgraded.prisma",
    "db:seed": "tsx scripts/seed.ts",
    "db:migrate-data": "tsx scripts/migrate-data.ts",
    "queue:clean": "tsx scripts/queue-clean.ts",
    "queue:inspect": "tsx scripts/queue-inspect.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.24.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}

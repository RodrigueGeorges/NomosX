# ============================================================================
# NomosX — Environment Variables
# Copy this file to .env and fill in the values
# ============================================================================

# --- REQUIRED ---

# Database (PostgreSQL / Neon)
DATABASE_URL="postgresql://user:password@localhost:5432/nomosx?pgbouncer=true&connection_limit=5"

# Security / Auth (min 32 characters)
JWT_SECRET="change-me-to-a-random-string-at-least-32-chars"

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"

# Admin key (min 16 characters in production)
ADMIN_KEY="change-me-admin-key-16-chars"

# --- OPTIONAL (have defaults or graceful fallbacks) ---

# Academic APIs (defaults provided in lib/env.ts)
# OPENALEX_API="https://api.openalex.org/works"
# CROSSREF_API="https://api.crossref.org/works"
# SEMANTICSCHOLAR_API="https://api.semanticscholar.org/graph/v1/paper/search"
# THESESFR_API="https://www.theses.fr/api/v1/theses"
UNPAYWALL_EMAIL="your-email@example.com"

# Identity enrichment
# ROR_API="https://api.ror.org/organizations"
# ORCID_API="https://pub.orcid.org/v3.0"

# Macro data
# EUROSTAT_API="https://ec.europa.eu/eurostat/api/dissemination/statistics/1.0/data"
# ECB_API="https://data-api.ecb.europa.eu/service/data"
# INSEE_API="https://api.insee.fr/series/BDM/V1/data"
# INSEE_API_KEY=""

# Anthropic (Claude fallback)
# ANTHROPIC_API_KEY=""

# Cohere (reranking)
# COHERE_API_KEY=""

# Redis (caching & rate limiting — strongly recommended for production)
# REDIS_URL="redis://localhost:6379"
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

# Sentry (error tracking)
# SENTRY_DSN=""
# SENTRY_ORG=""
# SENTRY_PROJECT=""
# NEXT_PUBLIC_SENTRY_DSN=""

# Email (Resend)
# RESEND_API_KEY=""
# EMAIL_FROM="noreply@nomosx.com"

# Cron security
# CRON_SECRET="change-me-cron-secret"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Stripe (subscription payments)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."
# STRIPE_PRICE_ACCESS="price_..."
# STRIPE_PRICE_ENTERPRISE="price_..."

# Node environment
NODE_ENV="development"
